<div class="row">
   <div class="col s12 center-align">
     <div class="card blue-grey darken-1">
       <div class="card-content white-text">
         <span class="card-title"></span>
         <h4>Average Age</h4>
         <p><%= @average_age %></p>
       </div>
     </div>
   </div>
 </div>

 <div class="row">
    <div class="col s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <table>
            <th><h5>Robots Hired Each Year</h5></th>
            <% @num_hired_per_year.each do |year, num| %>
            <tr>
              <td><%= year %></td>
              <td><%= num %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <table>
            <th><h5>Robots By Department</h5></th>
            <% @num_robots_in_department.each do |department, num| %>
            <tr>
              <td><%= department %></td>
              <td><%= num %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <table>
            <th><h5>Robots By City</h5></th>
            <% @num_robots_in_city.each do |city, num| %>
            <tr>
              <td><%= city %></td>
              <td><%= num %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col s3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <table>
            <th><h5>Robots By State</h5></th>
            <% @num_robots_in_state.each do |state, num| %>
            <tr>
              <td><%= state %></td>
              <td><%= num %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
